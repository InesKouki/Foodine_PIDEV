{% extends 'baseFront.html.twig' %}
{% block title %}
    Commande
{% endblock %}
{% block content %}
    <div class="page-banner-area item-bg3">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="page-banner-content">
                        <h2>Commande</h2>
                        <ul>
                            <li>
                                <a href="index.html">Acceuil</a>
                            </li>
                            <li>Passer commande</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="cart-area ptb-100">

        <div class="container">

            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <div class="billing-details">
                        <h3 class="title">Passer une Commande</h3>
                        {{ form_start(form,{ 'attr' : {'novalidate':'novalidate'} }) }}

                        <div class="row">

                            <div class="col-lg-12 col-md-6">
                                <div class="form-group">
                                    <label>Nom </label>
                                    {{ form_widget(form.nom ,  {'attr': {'class': 'form-control'}}) }}
                                    <ul class="custom-error">
                                        {{form_errors(form.nom)}}
                                    </ul>

                                </div>

                            </div>

                            <div class="col-lg-12 col-md-6">
                                <div class="form-group">
                                    <label>DÃ©tails </label>
                                    {{ form_widget(form.total ,  {'attr': {'class': 'form-control'}}) }}
                                    <ul class="custom-error">
                                        {{form_errors(form.total)}}
                                    </ul>
                                </div>
                            </div>




                            <div class="col-lg-12 col-md-6">
                                <div class="form-group">
                                    <label>Mode  de Paiement </label>
                                    {{ form_widget(form.modepaiement ,  {'attr': {'class': 'form-control'}}) }}

                                </div>
                            </div>

                            <form

                                    action="{{ path('ajoutercommande') }}"
                                    style="display: inline-block">

                                <button class="btn btn-primary"> Ajouter</button>
                            </form>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="order-details">
                        <h3 class="title">Liste des Produits</h3>
                        <div class="order-table table-responsive">
                            <table class="table table-bordered">
                                <thead>

                                <tr>
                                    <th scope="col">Nom du Produit</th>
                                    <th scope="col">Prix</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for p in liste1 %}
                                <tr>
                                    <td class="product-name">
                                        <a href="shop-details.html">{{ p.product.name }}</a>
                                    </td>
                                    <td class="product-total">
                                        <span class="subtotal-amount">{{ p.product.price }}</span>
                                    </td>
                                </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    <td colspan="4" class="text-right">Total :</td>
                                    <td class="text-right">{{ total }}Dt</td>
                                    <td></td>
                                </tr>
                                </tfoot>>
                            </table>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </section>

{% endblock %}