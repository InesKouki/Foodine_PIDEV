{% extends 'baseFront.html.twig' %}
{% block title %}
    Commande
{% endblock %}
{% block content %}
    <section class="cart-area ptb-100">

        <div class="container">

                <div class="row">
                    <div class="col-lg-6 col-md-12">
                        <div class="billing-details">
                            <h3 class="title">Passer un Commande</h3>
                            {{ form_start(form) }}

                            <div class="row">

                                <div class="col-lg-12 col-md-6">
                                    <div class="form-group">
                                        <label>Nom </label>
                                        {{ form_widget(form.nom ,  {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <label>Etat</label>
                                        {{ form_widget(form.etat ,  {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-6">
                                    <div class="form-group">
                                        <label>Total </label>
                                        {{ form_widget(form.total ,  {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>


                                <div class="col-lg-12 col-md-6">
                                    <div class="form-group">
                                        <label>Date</label>
                                        {{ form_widget(form.date ,  {'attr': {'class': 'form-control datepicker'}}) }}
                                    </div>
                                </div>



                                <div class="col-lg-12 col-md-6">
                                    <div class="form-group">
                                        <label>Type de Paiement </label>
                                        {{ form_widget(form.modepaiement ,  {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>

                                <form

                                        action="{{ path('ajoutercommande') }}"
                                        style="display: inline-block">
                                    <input type="hidden">
                                    <button class="btn btn-primary"> Ajouter</button>

                                </form>

                            </div>
                            {{ form_end(form) }}

                        </div>

                    </div>
                </div>
        </div>
    </section>
{% endblock %}