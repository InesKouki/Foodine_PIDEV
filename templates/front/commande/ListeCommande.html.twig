{% extends 'baseFront.html.twig' %}
{% block title %}
    Commande
{% endblock %}
{% block content %}
    <section class="cart-area ptb-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="col-lg-12 col-md-12">
                        <div class="billing-details">
                            <h3 class="title">Vos Commandes</h3>
                            <div class="row">
                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <form>
                                            <div class="cart-table table-responsive">
                                                <table class="table table-bordered">
                                                    <thead>
                                                    <tr>
                                                        <th scope="col">Nom & Prénom</th>

                                                        <th scope="col">Détails</th>
                                                        <th scope="col">Date</th>
                                                        <th scope="col">Mode de paiement</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% for c in commande %}
                                                        <tr>
                                                            <td>{{ c.nom }}</td>

                                                            <td>{{ c.total }}</td>
                                                            <td>{{ c.date | date }}</td>
                                                            <td>
                                                                {% if c.modepaiement == 0  %} Paypal
                                                                {% endif %}
                                                                {% if c.modepaiement == 1  %} carte
                                                                {% endif %}
                                                                {% if c.modepaiement == 2  %} espéces
                                                                {% endif %}
                                                            </td>
                                                            <td>
                                                                <div class="d-flex order-actions">

                                                                    <a href="{{ path('supprimercommandefront',{id :c.id}) }}" class="ms-3"><i class='bx bxs-trash'></i></a>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div class="cart-buttons">
                                                <div class="row align-items-center">
                                                    <div class="col-lg-7 col-sm-7 col-md-7">
                                                        <a href="/" class="default-btn">
                                                            Acceuil
                                                        </a>
                                                    </div>
                                                    <div class="col-lg-5 col-sm-5 col-md-5 text-right">
                                                        <a href="/ajoutercommande" class="default-btn">
                                                            Passer une Commande
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div >
                            </div >
                        </div >
                    </div >
                </div>
            </div>
        </div>
    </section>
    <!-- End Checkout Area -->
{% endblock %}