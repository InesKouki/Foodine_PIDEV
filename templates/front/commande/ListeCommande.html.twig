{% extends 'baseFront.html.twig' %}
{% block title %}
    Commande
{% endblock %}
{% block content %}
    <style>
        .page-banner-area {
            background-image: url(Front/assets/img/foodd.jpg);
            padding-top: 250px;
        }
    </style>
    <div class="page-banner-area ">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="page-banner-content">
                        <h2>Commande</h2>
                        <ul>
                            <li>
                                <a href="index.html">Acceuil</a>
                            </li>
                            <li>Liste commande</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="cart-area ptb-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="col-lg-12 col-md-12">
                        <div class="billing-details">
                            <h3 class="title">Vos Commandes</h3>
                            <div class="row">
                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <form>
                                            <div class="cart-table table-responsive">
                                                <table class="table table-bordered">
                                                    <thead>
                                                    <tr>
                                                        <th scope="col">Nom & Prénom</th>

                                                        <th scope="col">Détails</th>
                                                        <th scope="col">Date</th>
                                                        <th scope="col">Mode de paiement</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% for c in commande %}
                                                        <tr>
                                                            <td>{{ c.nom }}</td>

                                                            <td>{{ c.total }}</td>
                                                            <td>{{ c.date | date }}</td>
                                                            <td>
                                                                {% if c.modepaiement == 0  %} Paypal
                                                                {% endif %}
                                                                {% if c.modepaiement == 1  %} carte
                                                                {% endif %}
                                                                {% if c.modepaiement == 2  %} espéces
                                                                {% endif %}
                                                            </td>
                                                            <td>
                                                                <div class="d-flex order-actions">

                                                                    <a href="{{ path('supprimercommandefront',{id :c.id}) }}" class="ms-3"><i class='bx bxs-trash'></i></a>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>

                                        </form>
                                    </div>
                                </div >
                            </div >
                        </div >
                    </div >
                </div>
            </div>
        </div>
    </section>
    <!-- End Checkout Area -->
{% endblock %}