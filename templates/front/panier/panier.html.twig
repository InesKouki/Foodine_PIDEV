    <!-- Start Cart Area -->
    <section class="cart-area ptb-100">
        <div class="container">
            <div class="row">

               {# {{ form_start(f) }} #}

                <div class="col-lg-12 col-md-12">

                        <div class="cart-table table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    <th scope="col">Produit</th>
                                    <th scope="col">Nom du Produit</th>
                                    <th scope="col">Prix unitaire</th>
                                    <th scope="col">Quantité</th>
                                    <th scope="col">Total</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for p in liste1 %}

                                <tr>
                                    <td class="product-thumbnail">
                                         <a href=""><img class="avatar" src="{{ asset('../uploads/')~p.product.image }}" ></a>
                                    </td>
                                    <td class="product-name">
                                        <a href="shop-details.html">{{ p.product.name }}</a>
                                    </td>
                                    <td class="product-price">
                                        <span class="unit-amount" class="text-right">{{ p.product.price }}</span>Dt
                                    </td>

                                    <td class="product-quantity">
                                        <div class="input-counter">
                                                    <span class="minus-btn">
                                                        <i class='bx bx-minus'></i>
                                                    </span>
                                            {{ p.quantite }}
                                            {# {{ form_widget(f.quantite ,  {'attr': {'class': 'form-control '}}) }} #}
                                            <span href="{{ path("panier",{id: p.product.id}) }}" ,class="plus-btn">
                                                        <i class='bx bx-plus'></i>
                                                    </span>
                                        </div>
                                    </td>
                                    <td class="product-price">
                                        <span class="unit-amount" class="text-right">{{ p.product.price * p.quantite}}</span>Dt
                                    </td>

                                    <td class="product-subtotal">

                                        <a href="{{ path('SupprimerPanier',{id :p.product.id}) }}" class="remove">
                                            <i class='bx bx-trash'></i>
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}

                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="4" class="text-right">Total :</td>
                                        <td class="text-right">{{ total }}Dt</td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <div class="cart-buttons">
                            <div class="row align-items-center">
                                <div class="col-lg-7 col-sm-7 col-md-7">
                                    <a href="/" class="default-btn">
                                        Retour au acceuil
                                    </a>
                                </div>
                                <div class="col-lg-5 col-sm-5 col-md-5 text-right">
                                    <a href="ajoutercommande" class="default-btn">
                                        Passer commande
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="cart-totals">
                            <h3>Cart Totals</h3>
                            <ul>
                                <li>Subtotal
                                    <span class="text-right">{{ total }}Dt</span>
                                </li>
                                <li>Shipping
                                    <span class="text-right">Dt</span>
                                </li>
                                <li>Total
                                    <span class="text-right"><b>Dt</b></span>
                                </li>
                            </ul>
                            <a href="ajouterlivraison" class="default-btn">
                                Passer à la livraison
                            </a>
                        </div>

                </div>
                {# {{ form_end(f) }} #}

