{% extends 'baseFront.html.twig' %}

{% block title %}
    Produits

{% endblock %}

{% block content %}
    <style>
        .page-banner-area{
            background-image: url(Front/assets/img/PP.png);
            padding-top: 250px;
        }
    </style>
        <!-- Start Page Banner -->
        <div class="page-banner-area">
            <div class="d-table">
                <div class="d-table-cell">
                    <div class="container">
                        <div class="page-banner-content">
                            <h2>Shop List One</h2>
                            <ul>
                                <li>
                                    <a href="index.html">Home</a>
                                </li>
                                <li>Shop List One</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Page Banner -->

        <!-- Start Top Products Area -->
        <section class="top-products-area pt-100 pb-100">
            <div class="container">
                <div class="filter-left">
                    {% set nb=0 %}
                    {% for a in prods  %}
                        {% set nb=nb+1 %}
                    {% endfor %}
                    <span class="result-count"><span class="count">{{ nb }}  </span> Produit  trouv√© </span>
                </div>
                <div class="orgo-grid-sorting row align-items-center">
                </div>
                <div class="row">
                    {% for a in prods %}
                    <div class="col-lg-3 col-md-6">
                        <div class="top-products-item">
                            <div class="products-image">
                                <a href=""> <img style="width: 250px; height: 250px" class="avatar" src="{{ asset('../uploads/')~a.image }}" ></a>

                                <ul class="products-action">
                                    <li>
                                        <a href="{{ path('AjouterPanier' , {id: a.id}) }}" data-tooltip="tooltip" data-placement="top" title="Add to Cart"><i class="flaticon-shopping-cart"></i></a>
                                    </li>
                                    <li>
                                        <a  href="{{ path('produit_like',{'id':a.id}) }}" data-tooltip="tooltip" data-placement="top" title="Add to Wishlist"><i class="flaticon-heart dis-block pos-relative js-addwish-b2"></i></a>
                                    </li>
                                    <li>
                                        <a href="#" data-tooltip="tooltip" data-placement="top" title="Quick View" data-toggle="modal" data-target="#productsQuickView">
                                            <i class="flaticon-search"></i>
                                        </a>
                                    </li>
                                </ul>

                                <div class="sale">
                                    <span>Sale</span>
                                </div>
                            </div>

                            <div class="products-content">
                                <h3>
                                    <a href="">{{ a.name }}</a>
                                </h3> <h3>
                                    <a>{{ a.price }} DT</a>
                                </h3>
                                <div class="price">
                                </div>
                                <ul class="rating">
                                    <li>
                                        <i class='bx bxs-star'></i>
                                        <i class='bx bxs-star'></i>
                                        <i class='bx bxs-star'></i>
                                        <i class='bx bxs-star'></i>
                                        <i class='bx bx-star'></i>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    {% endfor %}

                    <div class="col-lg-12 col-md-12">
                        <div class="pagination-area">
                            <a href="#" class="prev page-numbers">
                                <i class="flaticon-left-arrow"></i>
                            </a>
                            <a href="#" class="page-numbers">1</a>
                            <span class="page-numbers current" aria-current="page">2</span>
                            <a href="#" class="page-numbers">3</a>
                            <a href="#" class="page-numbers">4</a>
                            <a href="#" class="next page-numbers">
                                <i class="flaticon-right-arrow"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
{% endblock %}

