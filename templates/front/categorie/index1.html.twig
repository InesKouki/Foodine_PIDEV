{% extends 'baseFront.html.twig' %}

{% block title %}
    Catégorie

{% endblock %}

{% block content %}

        <!-- Start Page Banner -->
        <div class="page-banner-area">
            <div class="d-table">
                <div class="d-table-cell">
                    <div class="container">
                        <div class="page-banner-content">
                            <h2>Shop List One</h2>
                            <ul>
                                <li>
                                    <a href="index.html">Home</a>
                                </li>
                                <li>Shop List One</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Page Banner -->

        <!-- Start Top Products Area -->
        <section class="top-products-area pt-100 pb-100">


            <div class="container">


                <form  method="post" action="{{path('recherche')}}"  class="site-banner__search layout-02">
                    <div class="field-input">
                        <label for="s">What?</label>
                        <input class="site-banner__search__input open-suggestion" id="s" type="text" name="search" placeholder="Produit" autocomplete="off">

                    </div><!-- .site-banner__search__input -->
                    <div class="field-submit">
                        <button><i class="las la-search la-24-black"></i></button>
                    </div>
                </form><!-- .site-banner__search -->
                <div class="filter-left">
                    {% set nb=0 %}
                    {% for a in prods11  %}
                        {% set nb=nb+1 %}
                    {% endfor %}
                    <span class="result-count"><span class="count">{{ nb }}  </span> Produit  trouvé </span>
                </div>
                <div class="orgo-grid-sorting row align-items-center">

                </div>


                <div class="row">
                    {% for a in prods11 %}

                    <div class="col-lg-3 col-md-6">




                        <div class="top-products-item">
                            <div class="products-image">
                                <a href="">      <img class="avatar" src="{{ asset('../uploads/')~a.image }}" ></a>

                                <ul class="products-action">
                                    <li>
                                        <a href="cart.html" data-tooltip="tooltip" data-placement="top" title="Add to Cart"><i class="flaticon-shopping-cart"></i></a>
                                    </li>
                                    <li>
                                        <a href="#" data-tooltip="tooltip" data-placement="top" title="Add to Wishlist"><i class="flaticon-heart"></i></a>
                                    </li>
                                    <li>
                                        <a href="#" data-tooltip="tooltip" data-placement="top" title="Quick View" data-toggle="modal" data-target="#productsQuickView">
                                            <i class="flaticon-search"></i>
                                        </a>
                                    </li>
                                </ul>

                                <div class="sale">
                                    <span>Sale</span>
                                </div>
                            </div>

                            <div class="products-content">
                                <h3>
                                    <a href="">{{ a.name }}</a>
                                </h3>
                                <div class="price">
                                    <span class="new-price">{{ a.price }}</span>
                                </div>
                                <ul class="rating">
                                    <li>
                                        <i class='bx bxs-star'></i>
                                        <i class='bx bxs-star'></i>
                                        <i class='bx bxs-star'></i>
                                        <i class='bx bxs-star'></i>
                                        <i class='bx bx-star'></i>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    {% endfor %}







                    <div class="col-lg-12 col-md-12">
                        <div class="pagination-area">
                            <a href="#" class="prev page-numbers">
                                <i class="flaticon-left-arrow"></i>
                            </a>
                            <a href="#" class="page-numbers">1</a>
                            <span class="page-numbers current" aria-current="page">2</span>
                            <a href="#" class="page-numbers">3</a>
                            <a href="#" class="page-numbers">4</a>
                            <a href="#" class="next page-numbers">
                                <i class="flaticon-right-arrow"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Top Products Area -->

{% endblock %}
