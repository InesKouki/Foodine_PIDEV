                                                                    <a href="{{ path('supprimerlivraisonfront',{id :l.id}) }}" class="ms-3"><i class='bx bxs-trash'></i></a>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>

                                    </div>
                                </div >
