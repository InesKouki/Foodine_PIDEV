{% extends 'baseBack.html.twig' %}
{% block title %}
    modifier
{% endblock %}
{% block content %}
    <div class="page-wrapper">
        <div class="page-content">

            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">Modifier Commande</div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-calendar-event"></i></a>
                            </li>

                        </ol>
                    </nav>
                </div>

            </div>
            <!--end breadcrumb-->

            <div class="card">
                <div class="card-body p-4">

                    <hr/>
                    <div class="form-body mt-4">
                        {{ form_start(f) }}
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="border border-3 p-4 rounded">

                                    <div class="mb-3">
                                        <label for="inputPrice" class="form-label">Nom et Prenom du client</label>
                                        {{ form_widget(f.nom ,  {'attr': {'class': 'form-control'}}) }}                                </div>
                                    <div class="mb-3">
                                        <label for="inputPrice" class="form-label">Etat</label>
                                        {{ form_widget(f.etat ,  {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="">
                                        <label class="form-check form-check-inline">
                                            <input type="radio"class="form-check-input"  name="select_size" checked="" class="custom-control-input">
                                            <div class="form-check-label">Small</div>
                                        </label>
                                        <label class="form-check form-check-inline">
                                            <input type="radio"class="form-check-input"  name="select_size" checked="" class="custom-control-input">
                                            <div class="form-check-label">Medium</div>
                                        </label>

                                        <label class="form-check form-check-inline">
                                            <input type="radio"class="form-check-input"  name="select_size" checked="" class="custom-control-input">
                                            <div class="form-check-label">Large</div>
                                        </label>
                                    </div>
                                    <div class="mb-3">
                                        <label for="inputPrice" class="form-label">Total</label>
                                        {{ form_widget(f.total ,  {'attr': {'class': 'form-control'}}) }}                                </div>
                                    <div class="mb-3">
                                        <label class="form-label">Date</label>
                                        {{ form_widget(f.date ,  {'attr': {'class': 'form-control'}}) }}                                </div>
                                    <div class="mb-3">
                                        <label for="inputPrice" class="form-label">Mode de Paiement</label>
                                        {{ form_widget(f.modepaiement ,  {'attr': {'class': 'form-control'}}) }}                                </div>
                                        <div class="d-grid">
                                            <button type =submit href="{{ path('affichercommande') }}" type="button" class="btn btn-light">Modifier</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{ form_end(f) }}
                    </div><!--end row-->
                </div>
            </div>
        </div>

    </div>
    </div>
    <!--end page wrapper -->
{% endblock %}