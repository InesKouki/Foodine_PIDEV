                                    <th>Etat</th>
                                    <th>Modifier</th>
                                    <th>Supprimer</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for i in t %}
                                    <tr>
                                        <td>{{ i.numerotable }}</td>
                                        <td>{{ i.nbplacetable }}</td>
                                        <td><img height="120" width="200" src="{{ asset('uploads/') ~ i.imagetable  }}" alt="image"   ></td>
                                        <td>{{ i.etat }}</td>
                                        <td><a href="{{ path('dd',{'id':i.id} ) }}" class="ms-4 text-white bg-light border-0"><i class='bx bxs-edit' ></i></a></td>
                                        <td><a href="{{ path('d',{'id':i.id} ) }}" class="text-white bg-light border-0"><i class='bx bxs-trash'></i></a></td>
                                    </tr>

                                {% endfor %}


                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div>
