{% extends 'baseBack.html.twig' %}
{% block title %}
    ajouetrtable
{% endblock %}

{% block content %}

        <!--end navigation-->
        <!--start page wrapper -->
        <div class="page-wrapper">
            <div class="page-content">

                <!--breadcrumb-->
                <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                    <div class="breadcrumb-title pe-3">Tables</div>
                    <div class="ps-3">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-chair"></i></a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">Ajouter Table</li>
                            </ol>
                        </nav>
                    </div>

                </div>
                <!--end breadcrumb-->

                <div class="card">
                    <div class="card-body p-4">
                        <h5 class="card-title">Ajouter Table</h5>
                        <hr/>
                        <div class="form-body mt-4">
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="border border-3 p-4 rounded">
                                        {{ form_start (form) }}
                                        <div class="mb-3">
                                            {{ form_label(form.imagetable,"image_table",{'attr':{'class':'form-label'}}) }}
                                            {{ form_widget(form.imagetable,{'attr':{'class':'form-control'}}) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="border border-3 p-4 rounded">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                {{ form_label(form.nbplacetable,"nombre de place",{'attr':{'class':'form-label'}}) }}
                                                {{ form_widget(form.nbplacetable,{'attr':{'class':'form-control'}}) }}
                                            </div>

                                        </div>



                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                {{ form_label(form.numerotable,"numero de place",{'attr':{'class':'form-label'}}) }}
                                                {{ form_widget(form.numerotable,{'attr':{'class':'form-control'}}) }}
                                            </div>

                                        </div>

                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                {{ form_label(form.etat,"Etat de place",{'attr':{'class':'form-label'}}) }}
                                                {{ form_widget(form.etat,{'attr':{'class':'form-control'}}) }}
                                            </div>

                                        </div>



                                        <div class="col-12">
                                            <div class="d-grid">
                                                <button type="submit" class="btn btn-light">modifier</button>

                                            </div>
                                        </div>
                                        {{ form_end (form) }}

                                    </div>
                                </div>
                            </div>
                        </div><!--end row-->
                    </div>
                </div>
            </div>

        </div>

    <!--end wrapper-->
{% endblock %}


