{% extends 'baseBack.html.twig' %}
{% block title %}
    Modifier Employés
{% endblock %}
{% block content %}
    <!--start page wrapper -->
    <div class="page-wrapper">
        <div class="page-content">
            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">Modifier Employés</div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bxs-user-badge"></i></a>
                            </li>

                        </ol>
                    </nav>
                </div>

            </div>
            <!--end breadcrumb-->
            {{ form_start(f) }}
            <div class="row">
                <div class="col-xl-9 mx-auto">



                    <hr/>
                    <div class="card">
                        <div class="card-body">
                            <div class="p-4 border rounded">

                                    <div class="form-check">
                                        <div class="form-check">
                                            {{ form_row(f.Roles,{'attr': {'class':'form-check form-switch'}}) }}

                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <button class="btn btn-light" type="submit">Modifier</button>
                                    </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!--end row-->
        </div>
    </div>
    {{ form_end(f) }}
    <!--end page wrapper -->
{% endblock %}