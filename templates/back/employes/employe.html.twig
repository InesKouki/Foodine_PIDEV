{% extends 'baseBack.html.twig' %}
{% block title %}
    Afficher Clients
{% endblock %}
{% block content %}
    <!--start page wrapper -->
    <div class="page-wrapper">
        <div class="page-content">
            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">Tables</div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bxs-user-account"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Clients</li>
                        </ol>
                    </nav>
                </div>

            </div>
            <!--end breadcrumb-->
            <h6 class="mb-0 text-uppercase">Liste des employes</h6>
            <hr/>
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example2" class="table table-striped table-bordered" style="width:100%">

                            <thead>
                            <tr>
                                <th>Nom </th>
                                <th>Prénom</th>
                                <th>Username</th>
                                <th>role</th>
                                <th>Image</th>
                                <th>Adresse</th>
                                <th>Adresse mail</th>
                                <th>Date d'inscription</th>
                                <th>Actions </th>

                            </tr>
                            </thead>

                            <tbody>

                            <tr>
                                {% for user in user %}
                                <td>{{ user.Nom}}</td>
                                <td>{{ user.Prenom}}</td>
                                <td>{{ user.Username}}</td>
                                <td>
                                {% for role in user.Roles %}
                                    {% if role=="ROLE_CHEF" %}
                                   chef
                                        {% elseif role=="ROLE_LIVREUR" %}
                                        livreur
                                    {% endif %}

                                    {% endfor %}
                                </td>
                                <td><img src="{{ asset('uploads/' ~ user.file ) }}"alt="img" class="image" style="max-height: 100px; max-width: 150px;"></td>

                                <td></td>
                                <td>{{ user.Email}}</td>
                                <td></td>


                                <td><a href="{{path('deleteClient',{'id':user.id})}}" class="text-white bg-light border-0"><i class='bx bxs-trash'></i></a></td>
                                <td><a href="{{path('back_ModifierEmploye',{'id':user.id})}}" class="text-white bg-light border-0"><i class='bx bxs-edit'></i></a></td>
                            </tr>


                            </tbody>
                            {% endfor %}
                            <tfoot>
                            <tr>
                                <th>Nom </th>
                                <th>Prénom</th>
                                <th>Username</th>
                                <th>role</th>
                                <th>Image</th>
                                <th>Adresse</th>
                                <th>Adresse mail</th>
                                <th>Date d'inscription</th>
                                <th>Supprimer</th>
                            </tr>
                            </tfoot>

                        </table>

                    </div>

                </div>
            </div>


        </div>
    </div>
    <!--end page wrapper -->

    <!--start overlay-->
    <div class="overlay toggle-icon"></div>
    <!--end overlay-->
    <!--Start Back To Top Button--> <a href="javaScript:;" class="back-to-top"><i class='bx bxs-up-arrow-alt'></i></a>
    <!--End Back To Top Button-->
    <footer class="page-footer">
        <p class="mb-0">Copyright © 2021. All right reserved.</p>
    </footer>
    </div>
    <!--end wrapper-->
{% endblock %}