{% extends 'baseChef.html.twig' %}
{% block title %}
    Recettes
{% endblock %}
{% block content %}
    <div class="page-wrapper">
        <div class="page-content">

            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">Ajouter Recette</div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-receipt"></i></a>
                            </li>

                        </ol>
                    </nav>
                </div>

            </div>
            <!--end breadcrumb-->

            <div class="card">


                <div class="card-body p-4">
                    <h5 class="card-title">Ajouter Recette</h5>
                    <hr/>
                    <div class="form-body mt-4">
                        <div class="row">


                            <div class="col-lg-4">
                                {{ form_start (f1) }}

                                <div class="border border-3 p-4 rounded">
                                    <div class="row g-3">
                                        <div class="col-12">
                                            {{ form_label(f1.nom,"Nom",{'attr':{'class':'form-label'}}) }}
                                            {{ form_widget(f1.nom,{'attr':{'class':'form-control'}}) }}
                                        </div>
                                        <div class="col-12">
                                            {{ form_label(f1.description,"description",{'attr':{'class':'form-label'}}) }}
                                            {{ form_widget(f1.description,{'attr':{'class':'form-control'}}) }}
                                        </div>
                                        <div class="col-12">
                                            {{ form_label(f1.planningid,"planning",{'attr':{'class':'form-label'}}) }}
                                            {{ form_widget(f1.planningid,{'attr':{'class':'form-control'}}) }}

                                        </div>
                                        <div class="col-12">
                                            {{ form_widget(f1.imagerecette,{'attr':{'class':'form-control'}}) }}

                                        </div>
                                        <div class="card-body">

                                                <div class="mb-3">


                                                       {{ form_widget(f1.ingredient,{'attr':{  'multiple data-role':'tagsinput'}}) }}
                                                </div>
                                        </div>

                                        <div class="col-12">
                                            <div class="d-grid">
                                                <button type="submit" class="btn btn-light">Ajouter</button>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                {{ form_end(f1) }}

                            </div>

                        </div><!--end row-->
                    </div>
                </div>

            </div>

        </div>
    </div>
{% endblock %}