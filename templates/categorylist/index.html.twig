




{% extends 'baseBack.html.twig' %}



{% block title %}
    Category


{% endblock %}


{% block content %}


    <div class="page-wrapper">
        <div class="page-content">
            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">Tables</div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-category"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Catégories</li>
                        </ol>
                    </nav>
                </div>
                <div class="ms-auto">
                    <div class="btn-group">
                        <a href="{{ path('categorie') }}"> <button type="button" class="btn btn-light">Ajouter</button></a>

                    </div>
                </div>
            </div>
            <!--end breadcrumb-->
            <h6 class="mb-0 text-uppercase">Liste des catégories</h6>
            <hr/>
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example2" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                            <tr>
                                <th>Nom catégorie</th>
                                <th>Image</th>
                                <th>Modifier</th>
                                <th>Supprimer</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for a in cat %}
                                <tr>
                                    <td> {{ a.name }}</td>
                                    <td class="w60">
                                        <img class="avatar" src="{{ asset('../uploads/')~a.image }}" >
                                    </td>

                                    <td><a href="{{ path('editcategory', {id : a.id }) }}" class="ms-4 text-white bg-light border-0"><i class='bx bxs-edit' ></i></a></td>
                                    <td><a href="{{ path('deletecategory', {id : a.id }) }}" class="text-white bg-light border-0"><i class='bx bxs-trash'></i></a></td>

                                </tr>
                            {% endfor %}

                            </tbody>

                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>

{% endblock %}
